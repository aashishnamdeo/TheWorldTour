@model TheWorldTour.ViewModels.ContactViewModel;
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="col-md-offset-3">Contact</h2>

@section scripts{ 
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post">
            <span asp-validation-summery="ModelOnly"></span>
            @if (ViewBag.UserMessage != null)
            {
                <div>@ViewBag.UserMessage</div>
            }

            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
                <span asp-validation-for="Name" class="text-muted"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" type="email" />
                <span asp-validation-for="Email" class="text-muted"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Message"></label>
                <textarea class="form-control" cols="50" rows="4" asp-for="Message"></textarea>
                <span asp-validation-for="Message" class="text-muted"></span>
            </div>
            
            <div class="form-group">
                <a asp-controller="App" asp-action="Index" class="btn btn-default">Cancle</a>
                <input class="btn btn-success"  type="submit" value="Send Message" />
            </div>
        </form>
    </div>
</div>